{{#each this}}
<li class="film-card js-gallery-item" data-id="{{id}}">
    <div class="film-card___container load-hidden" data-id="{{id}}">
        <div class="film-thumbs">
            <img class="film-img" src="{{#if poster_path}}https://image.tmdb.org/t/p/w500{{poster_path}}{{else}}https://clipartmag.com/images/old-camera-clipart-27.jpg{{/if}}" loading="lazy" alt="{{title}}" />
        </div>
        <div class="film-text-wrapper">
            <h2 class="title">{{title}}</h2>
            <div class="film-box">
                <p class="genre">{{genre_ids}}</p>
                <p class="release-date">{{release_date}}</p>
                <p class="rating visually-hidden">{{vote_average}}</p>
            </div>
        </div>
    </div>
</li>
{{/each}}

